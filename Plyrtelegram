<body>
  <div class="box">
    <h2>üé¨ Telegram Player & Generator</h2>
    <p><b>Mode 1:</b> Masukkan link Telegram, dapatkan link Base64 untuk dishare.</p>
    <input type="text" id="inputLink" placeholder="contoh: https://t.me/namachannel/123" />
    <button onclick="generate()">üîó Buat Link Base64</button>
    <div id="output" class="result" style="display:none"></div>

    <hr style="margin:25px 0; border:1px solid #333;">

    <p><b>Mode 2:</b> Jika file ini dibuka dengan parameter <code>?link=BASE64</code>, otomatis tampil player di bawah üëá</p>
    <div id="player"></div>
  </div>

  <script>
    // Mode 1: Generator Base64
    function generate(){
      var link = document.getElementById('inputLink').value.trim();
      if(!link){
        alert("Isi dulu link Telegram!");
        return;
      }
      try {
        var encoded = btoa(link);
        var resultUrl = window.location.origin + window.location.pathname + "?link=" + encoded;
        var out = `
        <b>Link asli:</b><br>${link}<br><br>
        <b>Base64:</b><br>${encoded}<br><br>
        <b>URL siap share:</b><br>${resultUrl}
        `;
        document.getElementById('output').innerHTML = out;
        document.getElementById('output').style.display = 'block';
      } catch(e){
        alert("Gagal encode link. Pastikan formatnya benar.");
      }
    }

    // Mode 2: Player
    function getParam(name){
      let url = new URL(window.location.href);
      return url.searchParams.get(name);
    }
    window.onload = function(){
      var encoded = getParam("link");
      if(encoded){
        try {
          var decoded = atob(encoded);
          document.getElementById('player').innerHTML = `
            <h3>‚ñ∂Ô∏è Memutar dari Telegram</h3>
            <p class="small">Link asli disembunyikan (Base64)</p>
            <iframe src="${decoded}" allowfullscreen></iframe>
          `;
        } catch(e){
          document.getElementById('player').innerHTML = "<p style='color:red'>Link tidak valid!</p>";
        }
      }
    }
  </script>
